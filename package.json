{
  "name": "honey-beaz",
  "version": "1.0.0",
  "description": "Test Task Template, express + ejs",
  "main": "server.js",
  "author": "Jinxzzl <Azazel.dev@tuta.io>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "scss:build": "sass client/public/scss/:client/public/css/ --style=compressed",
    "server:build": "rm -rf ./build && tsc",
    "server:dev": "nodemon src/server.ts",
    "client:dev": "sass --watch client/public/scss/:client/public/css/ --style=compressed",
    
    "build": "npm run scss:build && npm run server:build",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "cross-env NODE_ENV=production node build/server.js"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.6",
    "cross-env": "^7.0.3",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "mongoose": "^6.0.12",
    "sass": "^1.43.3",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.14"
  }
}
