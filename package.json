{
  "name": "test-task",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "build": "rm -rf ./build && tsc && cpy **/* !**/*.ts !**/*.scss ../build --cwd=src --no-overwrite --parents",
    "watch:server": "nodemon src/server.ts",
    "watch:scss": "sass --watch src/public/scss/main.scss src/public/css/main.css",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run watch:scss\" \"npm run watch:server\"",
    "start": "cross-env NODE_ENV=production node build/server.js"
  },
  "license": "MIT",
  "dependencies": {
    "cross-env": "^7.0.3",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "mongoose": "^6.0.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.10.1",
    "concurrently": "^6.2.2",
    "cpy-cli": "^3.1.1",
    "nodemon": "^2.0.13",
    "sass": "^1.42.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
