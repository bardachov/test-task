<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %> 
</head>
<body>
    <header class="header">
        <%- include('../partials/menu') %> 
    </header>
    <main class="content">
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="column col-50">
                        <%- include(
                            '../partials/category',
                            {
                                title: 'Freshly Picked Honey',
                                description: 'Honey is a sweet, viscous food substance made by honey bees and some related insects',
                                image: 'static/images/shop/hot-product/1.jpg'
                            }
                        ) %> 
                    </div>
                    <div class="column col-50">
                        <div class="row">
                            <div class="column">
                                <%- include(
                                    '../partials/category',
                                    {
                                        title: 'Thanks to the honey bees',
                                        description: 'Honey is a sweet, viscous food substance made by honey bees and some related insects',
                                        image: 'static/images/shop/hot-product/2.jpg'
                                    }
                                ) %>
                            </div>
                            <div class="column">
                                <%- include(
                                    '../partials/category',
                                    {
                                        title: 'Honey that is Bee Honey',
                                        description: 'Honey is a sweet, viscous food substance made by honey bees and some related insects',
                                        image: 'static/images/shop/hot-product/3.jpg'
                                    }
                                ) %>
                            </div>
                        </div>
                    </div>
                    <div class="column">
                        <%- include(
                            '../partials/category',
                            {
                                title: 'Honey tastes so good',
                                description: 'Honey is a sweet, viscous food substance made by honey bees and some related insects',
                                image: 'static/images/shop/hot-product/4.jpg'
                            }
                        ) %>
                    </div>
                </div>
            </div>
        </div>
        <section class="section">
            <div class="container">
                <div class="container-heading">
                    <h5 class="heading heading-small">Our Products</h5>
                    <div class="heading-arrow">
                        <span class="points"></span>
                        <span class="line"></span>
                        <span class="points"></span>
                    </div>
                    <h2 class="heading heading-large">Best Quality Product</h2>
                </div>
                <div class="row">
                    <div class="column">
                        <ul class="tab-list">
                            <%- include('../partials/tab-item', {title: 'Beehive', active: true}) %> 
                            <%- include('../partials/tab-item', {title: 'Beekeeper'}) %>
                            <%- include('../partials/tab-item', {title: 'Honey'}) %>
                            <%- include('../partials/tab-item', {title: 'BeeHoney'}) %>
                            <%- include('../partials/tab-item', {title: 'Beekeeping'}) %>
                            <%- include('../partials/tab-item', {title: 'HoneyBee'}) %>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <% for( let i = 0; i < products.length; i++ ) { %>
                        <%- include('../partials/product', {title: products[i].name, image: products[i].image, price: products[i].price}) %>
                    <% } %>
                </div>
            </div>
        </section>
    </main>
    <footer class="footer">
        <%- include('../partials/footer') %> 
    </footer>
</body>
</html>