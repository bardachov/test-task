<div id="product-create" class="modal product-create-init">
    <div class="modal-content">
      <h1>Create product</h1>
      <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="input-field col s6">
                    <input id="product-name" type="text">
                    <label for="product-name">Product name</label>
                </div>
                <div class="input-field col s6">
                    <input id="product-price" type="text"">
                    <label for="product-price">Price</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="product-description" class="materialize-textarea"></textarea>
                    <label for="product-description">Description</label>
                </div>
            </div>
            <div class="row">
                <h5 style="font-weight: 800;">Select Product Image</h5>
                <div class="file-field input-field">
                    <div class="btn grey darken-2">
                      <span>Select</span>
                      <input type="file" id='product-image'>
                    </div>
                    <div class="file-path-wrapper">
                      <input id='product-image-wrapper' class="file-path validate" type="text">
                    </div>
                  </div>
            </div>
            <div class='row'>
              <button name='submit-btn' id='submit-btn' class='col s12 btn btn-large waves-effect grey darken-2'>Create</button>
            </div>
        </div>
      </div>
    </div>
</div>